                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="nl.wouter.mindtrail2015.MainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="nl.wouter.mindtrail2015.GetGpsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="nl.wouter.mindtrail2015.MainActivityOptions"
            android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>
        
        <receiver
            android:name="nl.wouter.mindtrail2015.LocationSenderStarter">
        </receiver>
        
        <service
            android:name="nl.wouter.mindtrail2015.GpsTester"
            android:enabled="true">
        </service>
    
        <meta-data
    		android:name="com.google.android.gms.version"
